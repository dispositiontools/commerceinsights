{% extends "_layouts/cp" %}
{% do view.registerAssetBundle("dispositiontools\\commerceinsights\\assetbundles\\commerceinsights\\CommerceinsightsAsset") %}
{% import "_includes/forms" as forms %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "https://github.com/dispositiontools/productinsights/blob/master/README.md" %}

{# The title of this CP section #}
{% set title = "Commerce Insights" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('productinsights') %}




{# The content of the CP Section#}
{% set content %}

<h2>Explore and export data from Craft Commerce</h2>


{% set plugin = craft.app.plugins.getPlugin('commerce', false) %}


{% if plugin and plugin is not null and plugin.isInstalled %}


<div class="ci-flex">

{% if currentUser.can('commerceinsightsProducts') %}
<div class="ci-item">
  <div class="ci-inner">
    <h3>Who bought which products and when</h3>

    <p>
    <a href="{{ url('commerceinsights/products/purchases') }}" class="ci-button">View purchases by date</a>
<br />&nbsp;<br />
    <a href="{{ url('commerceinsights/products') }}" class="ci-button">View purchases by products</a>
    </p>
  </div>
</div>
{% endif %}


{% if currentUser.can('commerceinsightsCustomers') %}
<div class="ci-item">
  <div class="ci-inner">
    <h3>Customer summaries</h3>



    <p><a href="{{ url('commerceinsights/customers') }}" class="ci-button">View customer summaries</a></p>
    <p>
    This page may take a while to load if you have a lot of customers
    </p>
  </div>
</div>
{% endif %}

{% if currentUser.can('commerceinsightsTransaction') %}
<div class="ci-item">
  <div class="ci-inner">
      <h3>Transactions</h3>

      <p>
      <a href="{{ url('commerceinsights/transactions') }}" class="ci-button">View transactions</a>
      </p>
  </div>
</div>
{% endif %}

</div>

{% else %}
<p>This plugin required Craft Commerce to be installed.</p>
{% endif %}


{% endset %}
