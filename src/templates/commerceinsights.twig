{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("dispositiontools\\commerceinsights\\assetbundles\\commerceinsights\\CommerceinsightsAsset") %}
{% do view.registerAssetBundle("dispositiontools\\commerceinsights\\assetbundles\\commerceinsightscpsection\\CommerceinsightsCPSectionAsset") %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "https://github.com/commerceinsights/commerceinsights/blob/master/README.md" %}

{# The title of this CP section #}
{% set title = "Commerceinsights" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('commerceinsights') %}

{# Get a URL to an image in our AssetBundle #}
{% set iconUrl = view.getAssetManager().getPublishedUrl('@dispositiontools/commerceinsights/assetbundles/commerceinsightscpsection/dist', true) ~ '/img/Commerceinsights-icon.svg' %}

{# Content that should appear in the page header#}
{% set extraPageHeaderHtml %}
    <div class="buttons">
        <a href="{{ pluginCpUrl }}" class="btn submit add icon">{{ "Click Me!"|t('commerceinsights') }}</a>
    </div>
{% endset %}

{# The content of the CP Section#}
{% set content %}
    <h2>{{ "Commerceinsights CP Section body goes here"|t('commerceinsights') }}</h2>
    <img src="{{ iconUrl }}" height="64" width="64" />
    <p class="textline"></p>
{% endset %}
